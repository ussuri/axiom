{
  "manifest_version": 2,
  "name": "Axiom Agent",
  "minimum_chrome_version": "41.0.0.0",
  "version": "0.0.2",

  "icons": {
    "32": "assets/icon_32.png",
    "128": "assets/icon_128.png"
  },

  "background": {
    "persistent": true,
    "scripts": [
      "scripts/agent_background.js"
    ]
  },

  "content_scripts": [
    {
      "js": [
        "scripts/agent_content_script.js"
      ],
      "matches": [ "*://*/*" ],
      "run_at" : "document_end",
      "all_frames": false
    }
  ],

  "browser_action": {
     "default_icon": "assets/icon_38.png",
     "default_title": "Axiom Chrome Agent"
  },

  "externally_connectable": {
    "matches": [
      "https://localhost:8080/*",
      "https://localhost:8282/*",
      "https://127.0.0.1:8080/*",
      "https://127.0.0.1:8282/*",
      "https://chromium.github.io/axiom/web_shell/*"
    ]
  },

  "permissions": [
    "<all_urls>",
    "downloads",
    "tabCapture",
    "tabs",
    "sessions",
    "background",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "cookies",
    "debugger",
    "history",
    "management",
    "pageCapture",
    "topSites",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],

  "key": ""
}
